creationComplete="init(event);"

[Bindable]
public var language:String = "en";

protected function init(event:FlexEvent):void
			{
				model.urlStyleClient="assets/style.css";
				model.serverType=ServerTypeGlobals.ABI;
				
				//Load configs
				populate1024();
				loadLanguage();
			}





private function loadLanguage():void{
				CursorManager.setBusyCursor();
				progressBarBegin.startProcessing("Loading language. Please Wait...");
				var http_serv:HTTPService = new HTTPService();
				http_serv.url = "assets/languages/"+language+"_cenpos.xml";    
				model.language = language;
				http_serv.resultFormat = "e4x";                  
				http_serv.addEventListener(ResultEvent.RESULT, loadLanguageResult);
				http_serv.addEventListener(FaultEvent.FAULT, faultLanguageHandler);
				http_serv.send();
			}	
			private function faultLanguageHandler(evt:Object):void
			{
				isProcessingBegin = false;
				progressBarBegin.stopProcessing();
				CursorManager.removeBusyCursor();
				showError("An error occurred loading the language","Error");
			}
			protected function loadLanguageResult(evt:ResultEvent):void{
				model.lang = new XML(evt.result);
				LabelView = model.lang.CARD_TITLE;
				submitButtonLabel= model.lang.SUBMIT_BUTTON;
				cancelButtonLabel= model.lang.CANCEL_BUTTON;
				ErrorText2 = model.lang.TEXT_BOTTOM;
				loadURLS();
			}






public var lang:XML = new XML();
public var language:String = "es";

VARIABLES EN SALE:

isProcessingBegin
progressBarBegin
CursorManager
http_serv:HTTPService
showError
LabelView
submitButtonLabel
cancelButtonLabel
ErrorText2